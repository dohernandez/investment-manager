<div class="row">
    <div class="col-md-12">
        <div class="box js-operation-panel">
            <div class="box-header no-border">
                <h3 class="box-title">{{ 'Operations'|trans }}</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {% embed 'Components/Panel/panel-table.html.twig' with {
                    'entity_name': operation.entity_name,
                    'fields': operation.fields,
                    'js_panel_class': 'js-operation-panel-box',
                    'border': 0,
                    'form': operation.form,
                    'search_width': operation.search_width,
                    'swalOptionsVariablePrefix': 'Operation'
                }%}
                {% endembed %}
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
