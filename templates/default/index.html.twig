{% extends 'base.html.twig' %}

{% block page_title %}{{ 'Welcome Investment Manager'|trans|title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% include 'Components/Panel/panel-table-css.html.twig' %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-6">
            {% include 'default/partial/stock-movers.html.twig' %}
        </div>
        <div class="col-md-6">
            {% include 'default/partial/stock-shakers.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include 'Components/Panel/panel-table-scripts.html.twig' %}
    {% include 'default/partial/stock-movers-scripts.html.twig' %}
    {% include 'default/partial/stock-shakers-scripts.html.twig' %}

    <script>
        $(document).ready(function() {
            let stockMoversDailyPanelTable = createStockMoversDaily("{{ stock.movers.daily.entity_name|trans|lower }}");

            stockMoversDailyPanelTable.render();
            stockMoversDailyPanelTable.loadRows();

            let stockShakersDailyPanelTable = createStockShakersDaily("{{ stock.shakers.daily.entity_name|trans|lower }}");

            stockShakersDailyPanelTable.render();
            stockShakersDailyPanelTable.loadRows();

            // Tweak button toggle main menu to show/hide columns
            $('.sidebar-toggle').on(
                'click',
                function(e) {
                    let $button = $(e.currentTarget);

                    if ($button.data('toggle') === 'push-menu') {
                        stockMoversDailyPanelTable.toggleExpanded();
                        stockShakersDailyPanelTable.toggleExpanded();
                    }
                }
            );
        });
    </script>
{% endblock %}
