<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Infrastructure\Aggregator\Changed" table="event_source" repository-class="App\Infrastructure\Aggregator\AggregateRepository">

        <unique-constraints>
            <unique-constraint columns="event_id" name="event_idx" />
        </unique-constraints>

        <id name="no" type="bigint" column="no">
            <generator strategy="AUTO"/>
        </id>

        <field name="eventId" column="event_id" type="guid" unique="true" />
        <field name="eventName" column="event_name" column-definition="VARCHAR(256) NOT NULL" />
        <field name="payload" type="object" />
        <field name="metadata" type="object" />
        <field name="aggregateType" column="aggregate_type" column-definition="VARCHAR(256) NOT NULL" />
        <field name="aggregateId" column="aggregate_id" type="guid" />
        <field name="aggregateVersion" column="aggregate_version" type="smallint" />
        <field name="createdAt" column="created_at" type="datetime" />

        <entity-listeners>
            <entity-listener class="App\Infrastructure\Aggregator\AggregateRootListener">
                <lifecycle-callback type="postPersist"   method="postPersistHandler"/>
            </entity-listener>
        </entity-listeners>
    </entity>

</doctrine-mapping>
